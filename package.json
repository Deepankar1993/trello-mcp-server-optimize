{
    "name": "@cyberdeep/trello-mcp-server-optimize",
    "version": "1.0.3",
    "private": false,
    "description": "Token-optimized Trello MCP Server with 97% response reduction",
    "type": "module",
    "main": "build/index.js",
    "bin": {
        "mcp-server-trello": "bin/mcp-server-trello.mjs"
    },
    "files": [
        "build",
        "bin",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755'); require('fs').chmodSync('bin/mcp-server-trello.mjs', '755')\"",
        "start": "node build/index.js",
        "dev": "tsc -w",
        "prepare": "npm run build",
        "prepublishOnly": "npm run build",
        "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
        "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
        "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage"
    },
    "keywords": [
        "mcp",
        "trello",
        "model-context-protocol",
        "claude",
        "ai",
        "optimization",
        "token-efficient",
        "api",
        "server"
    ],
    "author": "Deepankar1993",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Deepankar1993/trello-mcp-server-optimize.git"
    },
    "bugs": {
        "url": "https://github.com/Deepankar1993/trello-mcp-server-optimize/issues"
    },
    "homepage": "https://github.com/Deepankar1993/trello-mcp-server-optimize#readme",
    "dependencies": {
        "@modelcontextprotocol/sdk": "0.6.0",
        "axios": "^1.6.7",
